<!-- Responsive Menu -->
<div class="lg:hidden hidden" id="menu">
  <ul class="bg-gray-800 p-4 text-center space-y-2">
    <li><a href="/home" class="block text-white py-2">Home</a></li>
    <li><a href="/plans" class="block text-white py-2">Plans</a></li>
    <li><a href="/resources" class="block text-white py-2">Resources</a></li>
    <li><a href="/contact" class="block text-white py-2">Contact</a></li>
    <li><a href="/products" class="block text-white py-2">Products</a></li>
    <% if (currentUser && currentUser.role === 'seller') { %>
    <li><a href="/products/new" class="block text-white py-2" tabindex="-1" aria-disabled="true">New</a></li>
    <% } %>
  </ul>
</div>

<script>
  // Toggle menu visibility with animation and change icon
  document.getElementById('menu-btn').addEventListener('click', function () {
    var menu = document.getElementById('menu');
    menu.classList.toggle('hidden');

    // Rotate hamburger icon and change its appearance
    var icon = document.getElementById('menu-icon');
    icon.classList.toggle('rotate');

    var line1 = document.getElementById('menu-icon-line1');
    var line2 = document.getElementById('menu-icon-line2');
    var line3 = document.getElementById('menu-icon-line3');

    if (menu.classList.contains('hidden')) {
      line1.setAttribute('d', 'M4 6h16');
      line2.setAttribute('d', 'M4 12h16');
      line3.setAttribute('d', 'M4 18h16');
    } else {
      line1.setAttribute('d', 'M6 18L18 6M6 6l12 12');
      line2.setAttribute('d', 'M6 6l12 12');
      line3.setAttribute('d', 'M6 6l12 12');
    }
  });
</script>




